<Window x:Class="BingoGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BingoGame"
        mc:Ignorable="d"
        Title="Bingo Game"
        Height="960" Width="1080">
    <!--
    <Window.Background>
                <ImageBrush ImageSource="resources/Image/backgorund.png"></ImageBrush>
    </Window.Background>
    -->
    <Border Padding="20 60">
    <StackPanel
        Orientation="Vertical"
        HorizontalAlignment="Center">
        <MediaElement
            x:Name="BG_Music">
                <!-- infinite loop for music https://learn.microsoft.com/en-us/dotnet/desktop/wpf/graphics-multimedia/how-to-repeat-media-playback -->
                <MediaElement.Triggers>
                    <EventTrigger RoutedEvent="MediaElement.Loaded">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <!-- The MediaTimeline has a RepeatBehavior="Forever" which makes the media play over and over indefinitely.-->
                                    <MediaTimeline Source="resources/Media/BGM.mp3" Storyboard.TargetName="BG_Music" RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                </MediaElement.Triggers>
        </MediaElement>
        <Grid x:Name="IconArea"
              Height="600"
              Width="800"
              HorizontalAlignment="Center"
              VerticalAlignment="Top">

            <!--
            ROW * COL ( retrieve dynamically from script )
            Dynamically set from C# code
            -->
                        
        </Grid>
        
        <!-- Button -->
        <Button Width="160"
                Height="60"
                HorizontalAlignment="Center"
                Content="Bingo"
                FontSize="24"
                FontWeight="Bold"
                Click="bingo_turn"
                Margin="360 40">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
        </Button>
    </StackPanel>
    </Border>
</Window>
